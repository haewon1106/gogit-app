<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="새 리포지토리"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray400" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="30dp">
        <RelativeLayout
            android:id="@+id/radio_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리포지토리" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <RadioButton
                    android:id="@+id/lock_true"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:drawableRight="@drawable/lock_size" />

                <RadioButton
                    android:id="@+id/lock_false"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@drawable/lock_open_size" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_container"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/repository_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="이름" />

            <EditText
                android:id="@+id/name_editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/repository_name"
                android:background="@drawable/border_line_radius" />

            <TextView
                android:id="@+id/repository_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repository_name"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:text="이미 존재하는 리포지토리입니다"
                android:textColor="@color/error"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/repository_info"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/repository_name"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:text="설명" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/repository_name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/repository_name"
                android:background="@drawable/border_line_radius" />

            <android.widget.Button
                android:id="@+id/upload_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/btn_round"
                android:backgroundTint="@color/gray400"
                android:text="게시물 업로드"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:itemBackground="@color/white"
        app:itemIconSize="25dp"
        app:itemTextColor="@color/gray400"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu"
        tools:showln="layout/fragment_user"></com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>