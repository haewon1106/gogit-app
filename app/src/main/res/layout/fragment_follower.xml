<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:id="@+id/userLayout"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView
            android:text="HyeKyung"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userId"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/git_logo"
            android:backgroundTint="@color/gray400"
            android:layout_below="@+id/userId"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/profileImg"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/userId"
            android:layout_toRightOf="@id/profileImg"
            android:paddingTop="12dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/account_repositories"/>
                <TextView
                    android:text="리포지토리"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/account_follower"/>
                <TextView
                    android:text="팔로워"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/account_following"/>
                <TextView
                    android:text="팔로잉"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="hyeg0121"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImg"
            android:textSize="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/userName"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/userName"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/organization_btn">
            <ImageButton
                android:background="@drawable/organization_btn_round"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:id="@+id/organization"/>
            <ImageButton
                android:background="@drawable/organization_btn_round"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:id="@+id/organization2"/>
            <ImageButton
                android:background="@drawable/organization_btn_round"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:id="@+id/organization3"/>
        </LinearLayout>
        <android.widget.Button
            android:text="팔로우"
            android:background="@drawable/btn_round"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/organization_btn"
            android:layout_marginTop="20dp"
            android:id="@+id/followBtn"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/button_underline"
        android:id="@+id/postLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/select_post_btn"
                android:src="@drawable/repository"
                android:scaleType="centerInside"
                android:paddingTop="10dp"
                android:paddingBottom="17dp"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/select_post_btn"
                android:src="@drawable/post"
                android:scaleType="centerInside"
                android:paddingTop="10dp"
                android:paddingBottom="17dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>