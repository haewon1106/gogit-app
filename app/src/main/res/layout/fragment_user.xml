<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/userLayout"
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:paddingLeft="20dp"
        android:paddingTop="35dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HyeKyung"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/userId"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/git_logo"
            android:backgroundTint="@color/gray400" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/userId"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/profileImg"
            android:paddingLeft="20dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_repositories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리포지토리" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로워" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로잉" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:text="hyeg0121"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/organization_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/userName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp">

            <ImageButton
                android:id="@+id/organization"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/organization_btn_round" />

            <ImageButton
                android:id="@+id/organization2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/organization_btn_round" />

            <ImageButton
                android:id="@+id/organization3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/organization_btn_round" />
        </LinearLayout>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_underline">
            <ImageButton
                android:id="@+id/rep"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/select_post_btn"
                android:src="@drawable/repository"
                android:scaleType="centerInside"
                android:paddingTop="10dp"
                android:paddingBottom="17dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/post"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/select_post_btn"
                android:src="@drawable/post"
                android:scaleType="centerInside"
                android:paddingTop="10dp"
                android:paddingBottom="17dp"
                android:layout_weight="1"/>
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/postContainer">
            <include layout="@layout/post"/>
            <include layout="@layout/post"/>
            <include layout="@layout/post"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
